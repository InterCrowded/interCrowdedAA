<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/amsterdam"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blueTransparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15pt"
        android:text="interpass"
        android:textAlignment="center"
        android:layout_marginTop="10pt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="15pt"
        android:id="@+id/searchButton"
        style="?android:attr/borderlessButtonStyle"
        android:text="search"
        android:layout_marginTop="10pt"
        android:textSize="12dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:id="@+id/startPointTextEdit"
        android:background="@drawable/round_rect_white"
        android:hint="From Where"
        android:layout_below="@+id/searchButton"
        android:layout_marginTop="20pt"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:id="@+id/endPointTextEdit"
        android:background="@drawable/round_rect_white"
        android:hint="To Where"
        android:layout_below="@+id/startPointTextEdit"
        android:layout_marginTop="30pt"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"/>

    <ImageButton
        android:layout_width="20pt"
        android:layout_height="20pt"
        android:layout_margin="2.5pt"
        android:src="@drawable/arrows"
        android:scaleType="centerCrop"
        android:layout_below="@id/startPointTextEdit"
        android:layout_centerHorizontal="true"
        style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>