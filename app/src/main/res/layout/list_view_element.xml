<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/transportationMeanTitlePreview"
        android:layout_width="wrap_content"
        android:layout_height="15pt"
        android:text="TrainB"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:layout_toRightOf="@id/transportationMeanTitlePreview"
        android:layout_marginLeft="5pt"
        android:id="@+id/starContainerPreview">

        <ImageView
            android:id="@+id/firstStarPreview"
            android:layout_width="10pt"
            android:layout_height="10pt"
            android:scaleType="fitCenter"
            android:src="@drawable/star_blue"
            android:layout_margin="2.5pt"/>
        <ImageView
            android:id="@+id/secondStarPreview"
            android:layout_width="10pt"
            android:layout_height="10pt"
            android:scaleType="fitCenter"
            android:src="@drawable/star_blue"
            android:layout_margin="2.5pt"/>
        <ImageView
            android:id="@+id/thirdStarPreview"
            android:layout_width="10pt"
            android:layout_height="10pt"
            android:scaleType="fitCenter"
            android:src="@drawable/star_blue"
            android:layout_margin="2.5pt"/>
        <ImageView
            android:id="@+id/fourthStarPreview"
            android:layout_width="10pt"
            android:layout_height="10pt"
            android:scaleType="fitCenter"
            android:src="@drawable/star_blue"
            android:layout_margin="2.5pt"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination titles"
        android:textAlignment="center"
        android:layout_below="@id/transportationMeanTitlePreview" />



</RelativeLayout>